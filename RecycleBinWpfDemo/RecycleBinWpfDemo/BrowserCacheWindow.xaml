<Window x:Class="RecycleBinWpfDemo.BrowserCacheWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="浏览器缓存演示 (BrowserCache)" Height="500" Width="750"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 浏览器选择 -->
        <GroupBox Grid.Row="0" Header="浏览器选择" Padding="8" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="浏览器：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="ComboBrowser" Width="180" SelectedIndex="0">
                    <ComboBoxItem Content="Microsoft Edge"/>
                    <ComboBoxItem Content="Google Chrome"/>
                    <ComboBoxItem Content="Mozilla Firefox"/>
                </ComboBox>
                <Button x:Name="BtnGetPaths" Content="获取缓存路径 (GetCachePaths)" Click="BtnGetPaths_Click"
                        Padding="12,4" Margin="12,0,0,0"/>
                <Button x:Name="BtnGetSize" Content="获取占用大小 (GetCacheSize)" Click="BtnGetSize_Click"
                        Padding="12,4" Margin="8,0,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- 容量 / 路径数 -->
        <GroupBox Grid.Row="1" Header="容量信息" Padding="8" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="TxtSize" VerticalAlignment="Center"
                           Text="点击“获取占用大小”或“获取缓存路径”后显示"/>
            </StackPanel>
        </GroupBox>

        <!-- 路径列表 -->
        <GroupBox Grid.Row="2" Header="缓存路径列表" Padding="8" Margin="0,0,0,8">
            <ListBox x:Name="ListPaths" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </GroupBox>

        <!-- 清理 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnClean" Content="清理该浏览器缓存 (CleanCache)" Click="BtnClean_Click"
                    Padding="16,8" Background="#E74C3C" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
