<Window x:Class="RecycleBinWpfDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="回收站功能演示 (RecycleBinHelper)" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 容量信息 -->
        <GroupBox Grid.Row="0" Header="容量信息 (GetCapacityInfo)" Padding="8" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="TxtCapacity" VerticalAlignment="Center"
                           Text="点击“刷新容量”获取回收站占用字节数与项数"/>
                <Button x:Name="BtnRefreshCapacity" Content="刷新容量" Margin="12,0,0,0"
                        Click="BtnRefreshCapacity_Click" Padding="12,4"/>
            </StackPanel>
        </GroupBox>

        <!-- 文件列表 -->
        <GroupBox Grid.Row="1" Header="文件列表 (GetFileList)" Padding="8" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="TxtListHint" VerticalAlignment="Center"
                           Text="点击“刷新列表”获取回收站中所有文件/目录路径"/>
                <Button x:Name="BtnRefreshList" Content="刷新列表" Margin="12,0,0,0"
                        Click="BtnRefreshList_Click" Padding="12,4"/>
            </StackPanel>
        </GroupBox>

        <ListBox Grid.Row="2" x:Name="ListPaths" Margin="0,0,0,8"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>

        <!-- 清空 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnEmpty" Content="清空回收站 (EmptyRecycleBin)" Click="BtnEmpty_Click"
                    Padding="16,8" Background="#E74C3C" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
